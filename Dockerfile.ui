# ---------------------------------------------------
# Cats vs Dogs - UI Container (Gradio)
# ---------------------------------------------------

FROM python:3.10-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

WORKDIR /app

# System dependencies required by PIL/OpenCV/Gradio
RUN apt-get update && apt-get install -y --no-install-recommends \
    libgl1 \
    libglib2.0-0 \
    && rm -rf /var/lib/apt/lists/*

# Install python deps
COPY requirements-ui.txt .
RUN pip install --upgrade pip && pip install -r requirements-ui.txt

# Copy ONLY UI source
COPY src/ui ./src/ui

# Expose Gradio port
EXPOSE 7860

# Run UI
CMD ["python", "-m", "src.ui.ui_gradio"]